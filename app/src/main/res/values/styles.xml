<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/whiteColor</item>
    </style>


    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Theme.ToolBar.ZhiHu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ActionButton.Overflow.ZhiHu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">

    </style>


    <style name="navigationTitleTextStyle">
        <item name="android:textSize">@dimen/sp25</item>
        <item name="android:textColor">@color/whiteTextColor</item>
    </style>

    <style name="navigationSubTitleTextStyle">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/whiteHintColor</item>
    </style>


    <style name="deviceItemRootStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:paddingLeft">@dimen/dp30</item>
        <item name="android:paddingRight">@dimen/dp30</item>
    </style>

    <style name="deviceValueTextStyle">
        <item name="android:textColor">#C1C1C1</item>
        <item name="android:textSize">@dimen/sp10</item>
    </style>

    <style name="topBackgrounStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp200</item>
    </style>


    <style name="setting_item_title">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>

    <style name="setting_item_subtitle">
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textColor">@color/blackHintColor</item>
    </style>


    <style name="about_item_title">
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>

    <style name="about_item_content">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/blackHintColor</item>
    </style>

    <style name="hintColorText">
        <item name="android:textColor">@color/blackHintColor</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="roundButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@color/blackTextColor</item>
    </style>

</resources>
